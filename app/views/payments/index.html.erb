<h1>Payments Made</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.client.name %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= link_to 'View', payment_path(payment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
